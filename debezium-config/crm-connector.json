{
  "name": "crm-connector",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",
    "database.hostname": "crm-db",
    "database.port": "5432",
    "database.user": "crm",
    "database.password": "crm123",
    "database.dbname": "crm_db",
    "database.server.name": "crm",
    "slot.name": "crm_slot",
    "publication.name": "crm_publication",
    "table.include.list": "public.interaction,public.segment,public.customersegment",
    "topic.prefix": "crm",
    "schema.history.internal.kafka.topic": "crm.history",
    "schema.history.internal.kafka.bootstrap.servers": "kafka1:19092,kafka2:19092,kafka3:19092",
    "transforms": "route",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "([^.]+)\\.([^.]+)\\.([^.]+)",
    "transforms.route.replacement": "$3",
    "plugin.name": "pgoutput"
  }
}
